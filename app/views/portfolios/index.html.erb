<h1>Portfolio items</h1>

<%= link_to 'Create new item', new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>
  <h2><%= portfolio_item.title %></h2>
  <h3><%= link_to portfolio_item.subtitle, portfolio_path(portfolio_item) %></h3>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
  <%= link_to 'Edit', edit_portfolio_path(portfolio_item) %>
  <%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure you?' } %>
<% end %>